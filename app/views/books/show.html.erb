<% if @new_book.errors.any? %>
  <div class="alert alert-danger">
    <p><%= @new_book.errors.count %> error(s) prohibited this book from being saved:</p>
    <ul>
      <% @new_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <!-- 左カラム -->
    <div class="col-md-3">
      <h1>User info</h1>
      <%= link_to user_path(@book.user) do %>
        <% if @book.user.profile_image.attached? %>
          <%= image_tag @book.user.profile_image.variant(resize_to_limit: [100, 100]) %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "100x100" %>
        <% end %>
      <% end %>

      <table class="table table-sm">
        <tr>
          <th>name</th>
          <td><%= @book.user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @book.user.introduction %></td>
        </tr>
      </table>

      <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary w-100 mb-4 text-center' do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>

      <h1>New book</h1>
      <%= form_with model: Book.new, url: books_path, method: :post, local: true do |f| %>
        <div class="mb-2">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-2">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>
    </div>

    <!-- 右カラム -->
    <div class="col-md-8 offset-md-1">
      <h3>Book detail</h3>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <% if @book.user.profile_image.attached? %>
                  <%= image_tag @book.user.profile_image.variant(resize_to_limit: [100, 100]) %>
                <% else %>
                  <%= image_tag 'no_image.jpg', size: "100x100" %>
                <% end %>
              <% end %><br>
              <%= link_to @book.user.name, user_path(@book.user) %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-success' %></td>
              <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: 'btn btn-danger' %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <!-- いいねボタン -->
      <% if @book.favorited_by?(current_user) %>
        <%= link_to book_favorite_path(@book), method: :delete do %>
          <i class="fa fa-heart fa-heart text-danger"></i> <%= @book.favorites.count %> いいね
        <% end %>
      <% else %>
        <%= link_to book_favorite_path(@book), method: :post do %>
          <i class="fa fa-heart-o fa-heart"></i> <%= @book.favorites.count %> いいね
        <% end %>
      <% end %>

      <!-- コメント一覧 -->
      <p>コメント件数：<%= @book.book_comments.count %></p>
      <% @book.book_comments.each do |book_comment| %>
        <div class="mb-3 border-bottom pb-2">
          <!-- プロフィール画像 -->
          <%= link_to user_path(book_comment.user) do %>
            <% if book_comment.user.profile_image.attached? %>
              <%= image_tag book_comment.user.profile_image.variant(resize_to_limit: [100, 100]) %>
            <% else %>
              <%= image_tag 'no_image.jpg', size: "100x100" %>
            <% end %>
          <% end %>

          <p><%= book_comment.user.name %></p>
          <p><%= book_comment.created_at.strftime('%Y/%m/%d') %></p>
          <p><%= book_comment.comment %></p>
          <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(@book, book_comment), method: :delete %>
          <% end %>
        
        
        </div>
      <% end %>

      <!-- コメント投稿フォーム -->
      <div>
        <%= form_with model: [@book, @comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
