<% if @new_book.errors.any? %>
  <div class="alert alert-danger">
    <p><%= @new_book.errors.count %> error(s) prohibited this book from being saved:</p>
    <ul>
      <% @new_book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <!-- 左側：User info + Book投稿フォーム -->
    <div class="col-md-3">
      <h1>User info</h1>
    
      <!-- プロフィール画像 -->
      <% if current_user.profile_image.attached? %>
        <%= image_tag current_user.profile_image.variant(resize_to_limit: [100, 100]) %>
      <% else %>
        <%= image_tag 'default-user.jpg', size: "100x100" %>
      <% end %>
    
      <!-- ユーザー情報 -->
      <table class="table table-sm">
        <tr>
          <th>name</th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= current_user.introduction %></td>
        </tr>
      </table>
    
      <!-- 編集ボタン（全幅＋中央＋アイコンのみ） -->
      <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary w-100 mb-4 text-center' do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    
      <!-- New book投稿フォーム -->
      <h1>New book</h1>
      <%= form_with model: @book, url: books_path, method: :post, local: true do |f| %>
        <div class="mb-2">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
    
        <div class="mb-2">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
    
        <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>
    </div>

    <!-- 右カラム：Book 詳細 -->
    <div class="col-md-8 offset-md-1">
      <h3>Book detail</h3>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <% if @book.user.profile_image.attached? %>
                  <%= image_tag @book.user.profile_image.variant(resize_to_limit: [100, 100]) %>
                <% else %>
                  <%= image_tag 'default-user.jpg', size: "100x100" %>
                <% end %>
              <% end %><br>
              <%= link_to @book.user.name, user_path(@book.user) %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-success' %></td>
              <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class: 'btn btn-danger' %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
