
<h1>User info</h1>
<div>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <h3>name <%= current_user.name %></h3>
  <h3>introduction<%= current_user.introduction %></h3>

  <% if @login_user == current_user %>
    <%= link_to edit_user_path(@login_user), class: 'btn btn-outline-secondary' do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  <% else %>
    <%= link_to user_books_path(@login_user), class: 'btn btn-outline-secondary' do %>
      <i class="fa-solid fa-book-open"></i>
    <% end %>
  <% end %>
</div>

<h1>New book</h1>
<%= form_with model: book, url: books_path, method: :post,local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <div><%= f.submit 'Create Book', class: 'btn btn-success' %></div>
<% end %>