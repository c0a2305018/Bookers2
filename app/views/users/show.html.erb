<!-- Users„Åã„ÇâshowÊäº„Åó„Åü„Å®„Åç -->

<%= render 'books/error', books: @book %>

<div class="container">
  <div class="row">
    <!-- Â∑¶„Ç´„É©„É† -->
    <div class="col-md-3">
      <h1>User info</h1>

      <!-- „Éó„É≠„Éï„Ç£„Éº„É´ÁîªÂÉèÔºöË°®Á§∫ÂØæË±°„É¶„Éº„Ç∂„ÉºÔºà@userÔºâ -->
      <%= link_to user_path(@user) do %>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image.variant(resize_to_limit: [100, 100]) %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "100x100" %>
        <% end %>
      <% end %>

      <!-- „É¶„Éº„Ç∂„ÉºÊÉÖÂ†± -->
      <table class="table table-sm">
        <tr>
          <th>name</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user.introduction %></td>
        </tr>
      </table>

      <!-- Á∑®ÈõÜ„Éú„Çø„É≥ -->
      <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary w-100 mb-4 text-center' do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>

      <!-- New bookÊäïÁ®ø„Éï„Ç©„Éº„É†Ôºà„É≠„Ç∞„Ç§„É≥„É¶„Éº„Ç∂„Éº„ÅÆ„Éï„Ç©„Éº„É†Ôºâ -->
      <h1>New book</h1>
      <%= form_with model: Book.new, url: books_path, method: :post, local: true do |f| %>
        <div class="mb-2">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-2">
          <%= f.label :body, "Opinion" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <%= f.submit 'Create Book', class: 'btn btn-success' %>
      <% end %>
    </div>

    <!-- Âè≥„Ç´„É©„É†ÔºöË°®Á§∫‰∏≠„É¶„Éº„Ç∂„Éº„ÅÆÊäïÁ®ø‰∏ÄË¶ß -->
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Opinion</th>
            <th>Comments</th>
            <th>Like</th> <!-- üëç „ÅÑ„ÅÑ„Å≠„Ç´„É©„É† -->
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <% if book.user.profile_image.attached? %>
                    <%= image_tag book.user.profile_image.variant(resize_to_limit: [100, 100]) %>
                  <% else %>
                    <%= image_tag 'no_image.jpg', size: "100x100" %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td><%= link_to "#{book.book_comments.count} „Ç≥„É°„É≥„Éà", book_path(book.id) %></td>

              <!-- „ÅÑ„ÅÑ„Å≠Ê©üËÉΩ -->
              <td>
                <% if book.favorited_by?(current_user) %>
                  <%= link_to book_favorite_path(book), method: :delete do %>
                    <i class="fa fa-heart text-danger"></i> <%= book.favorites.count %> „ÅÑ„ÅÑ„Å≠
                  <% end %>
                <% else %>
                  <%= link_to book_favorite_path(book), method: :post do %>
                    <i class="fa fa-heart fa-heart-o"></i> <%= book.favorites.count %> „ÅÑ„ÅÑ„Å≠
                  <% end %>
                <% end %>
              </td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
